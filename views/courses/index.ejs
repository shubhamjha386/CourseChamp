<%layout('layouts/boilerplate') -%>

<h1>All Courses</h1>

<% for(let course of courses){%>
<div class="card mb-3">
  <div class="row">
    <div class="col md-4">
      <img class="img-fluid" src="<%= course.images[0].url %> " alt="" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= course.title %></h5>
        <p class="card-text"><%= course.description %></p>
        <a class="btn btn-primary" href="/courses/<%= course._id %>">View</a>
      </div>
    </div>
  </div>
</div>
<% } %>

<%layout('layouts/boilerplate') -%> 

<% if(response){%>
    <div class="row mb-3">
        <div class="col-6 offset-3">
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">S.no</th>
                    <th scope="col">Message</th>
                    <th scope="col">Link</th>
                  </tr>
                </thead>
                <tbody>
                <% for(let i=0;i<response.length;i++) {%>
                  <tr>
                    <th scope="row"><%= i+1 %> </th>
                    <td><%= response[i][0] %> </td>
                    <% if(response[i][1]){ %> 
                    <td> <a href="<%= response[i][1]%>">Link</a> </td>
                    <% } else{%> 
                    <td>NA</td>
                    <% } %> 
                  </tr>
                <% } %> 
                </tbody>
              </table>
        </div>
    </div>
<% } %>
<div class="row">
  <h1 class="text-center">Submit Your Course</h1>
  <div class="col-6 offset-3">
    <form action="/courses" method="POST" class="d-inline">
      <div class="mb-3">
        <label class="form-label" for="courseurl"><b>Course URL</b></label>
        <textarea
          type="url"
          class="form-control"
          name="courseurl"
          id="courseurl"
          required
        ></textarea>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <a href="/courses" class="btn btn-primary ms-2">Back</a>
  </div>
</div>

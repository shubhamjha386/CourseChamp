<%layout('layouts/boilerplate') -%> 
<div class="row">
    <h1 class="text-center">Submit Your Course</h1>
    <div class="col-6 offset-3">
        <form action="/courses" method="POST" class="d-inline form-validation" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title"><b>Course Name</b></label>
                <input class="form-control" type="text" name="course[title]" id="title" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description"><b>Description</b></label>
                <textarea class="form-control" name="course[description]" id="description" cols="25" rows="8" required></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price"><b>Price</b></label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">â‚¹</span>
                    <input type="number" class="form-control" name="course[price]" aria-label="Username" aria-label="price" aria-describedby="price-label" required>
                </div>
            </div>
        
            <div class="mb-3">
                <label for="formFileMultiple" class="form-label"><b>Choose image(s)...</b></label>
                <input class="form-control" type="file" id="formFileMultiple" name="image" multiple>
            </div>
            <div class="mb-3">

                <label class="form-label" for="coupon"><b>Coupon code</b></label>
                <input class="form-control" type="text" name="course[coupon]" id="coupon" required>
            </div>
            <button class="btn btn-success">Submit</button>
    </form>
        <a href="/courses" class="btn btn-primary ms-2">Back</a>
    </div>
</div>

